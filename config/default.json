{
    "version": "1.0.0",
    "app_name": "Android Recon",
    "output_dir": "./output",
    "log_level": "INFO",
    "scanners": {
        "network": {
            "enabled": true,
            "timeout": 5,
            "ping_count": 1,
            "port_scan_enabled": false,
            "common_ports": [21, 22, 23, 25, 53, 80, 110, 143, 443, 445, 993, 995, 3306, 3389, 5432, 8080, 8443]
        },
        "wifi": {
            "enabled": true,
            "scan_interval": 10,
            "show_hidden": false
        },
        "bluetooth": {
            "enabled": true,
            "scan_duration": 10,
            "scan_le": true
        }
    },
    "radar": {
        "refresh_rate": 1.0,
        "max_items": 50,
        "color_scheme": "default"
    },
    "web": {
        "host": "127.0.0.1",
        "port": 8080,
        "debug": false,
        "auto_refresh": 5
    }
}
